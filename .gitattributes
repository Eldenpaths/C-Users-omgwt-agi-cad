# Default to LF for text files
*          text=auto eol=lf

# Explicit LF for common source/text types
*.js       text eol=lf
*.jsx      text eol=lf
*.ts       text eol=lf
*.tsx      text eol=lf
*.css      text eol=lf
*.scss     text eol=lf
*.md       text eol=lf
*.json     text eol=lf
*.yml      text eol=lf
*.yaml     text eol=lf
*.cjs      text eol=lf
*.mjs      text eol=lf

# Windows scripts keep CRLF
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# Treat common binaries as binary (no line ending normalization)
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.pdf      binary
*.ttf      binary
*.woff     binary
*.woff2    binary

# SVG is text; ensure LF
*.svg      text eol=lf

# Ensure these remain normalized
.editorconfig text eol=lf
.gitattributes text eol=lf